<h1 class="text-center mt-3 text-white">Parent Teacher Meetings</h1>
<div class="container mt-3 text-center">
  <% if @user.teacher %>
    <%= simple_form_for([@kurasu, @meeting], remote: true) do |f| %>
      <%= f.input :title %>
      <%= f.input :content %>
      <%= f.input :date, as: :string, input_html: {class: "datepicker"} %>
      <%= f.submit 'Create meeting', class: 'btn btn-danger mt-2 btn-lg btn-block' %>
    <% end %>
  <% end %>
</div>
<%= render 'meetings_card' %>
<div class="container text-center mt-4">
  <%= link_to 'Return to Classes', kurasus_path, class: "btn btn-info" if current_user.teacher? %>
  <%= link_to 'Return to Dashboard', dashboards_path, class: "btn btn-info" if !current_user.teacher? %>
</div>

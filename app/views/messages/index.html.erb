<div class="container">
  <%= render 'header', student: @student %>
  <% if current_user.teacher? %>
    <div class="text-center">
      <a class="btn btn-primary mb-3" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
        Write a message
      </a>
    </div>
  <% end %>
  <div class="collapse" id="collapseExample">
  <%= simple_form_for([@student, @message], remote: true) do |f| %>
    <%= f.input :title %>
    <%= f.input :content %>
    <%= f.input :photo %>
    <%= f.submit 'Add message', class: 'btn btn-danger mt-2 btn-lg btn-block' %>
  <% end %>
  </div>
  <%= render 'discussion', student: @student %>
  <div class="container text-center">
    <% if current_user.teacher %>
      <%= link_to "Return to Classes", kurasus_path, class: "btn btn-info my-4"%>
    <% else %>
      <%= link_to "Return to Dashboard", dashboards_path, class: "btn btn-info my-4"%>
    <% end %>
  </div>
</div>

<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag 'homepage/logo_transparent.png' %>
  <% end %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item dropdown" id="dropper">
          <% if current_user.teacher %>
            <i class="fas fa-school" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></i>
          <% else %>
            <i class="fas fa-users" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></i>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Bulletin Board", events_path, class: "dropdown-item" %>
            <% if current_user.teacher %>
              <%= link_to "Classes", kurasus_path, class: "dropdown-item" %>
            <% else %>
              <%= link_to "Notebook", student_messages_path(current_user.students), class: "dropdown-item" %>
            <% end %>
            <%= link_to "Dashboard", user_root_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "btn btn-primary" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

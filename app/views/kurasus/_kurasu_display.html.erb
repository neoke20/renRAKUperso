<% @user.kurasus.each do |kurasu| %>
  <div class="container">
    <div class="card mt-4" id="class-card">
      <div class="card-body">
        <a data-toggle="collapse" href="#collapse<%= kurasu.id %>" role="button" aria-expanded="false" aria-controls="collapseExample" class="student-button">Show students</a>
        <a href="kurasus/<%= kurasu.id %>/schedules" class="schedule-button">Schedule</a>
        <a href="kurasus/<%= kurasu.id %>/meetings" class="meeting-button">Meetings</a>
        <p class="card-text stretched-link">Class - <%= kurasu.name %></p>
      </div>
    </div>
    <div class="student-cards mt-2">
      <% kurasu.students.sort_by { |student| student.last_name}.each do |student| %>
        <div class="collapse" id="collapse<%= kurasu.id %>">
          <div class="card my-4" id="student-card">
            <div class="flex-column justify-content-between">
              <div class="notebook-button">
                <a href="/students/<%= student.id %>/messages"><img src="<%= image_path 'kurasu/notebook.png' %>" alt="" /></a>
    </div>
    <div class="grades-button">
      <a href="/students/<%= student.id %>/grades"><img src="<%= image_path 'kurasu/grades.png' %>" alt="" /></a>
  </div>
</div>
<div class="card-body d-flex justify-content-between">
  <p class="card-text stretched-link pr-4"><%= student.first_name%> <%= student.last_name%></p>
  <% unless student.unread_comments.zero? %>
    <p id="student-number"><%= student.unread_comments %></p>
  <% end %>
</div>
</div>
</div>
<% end %>
</div>
</div>
<% end %>

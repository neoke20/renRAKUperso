<div class="container">
  <h1>Class <%= @kurasu.name %> Schedule</h1>
  <% if @kurasu.schedule %>
  <div class="container">
    <%= cl_image_tag @kurasu.schedule.photo.key, height: 600, width: 800, crop: 'fill' if @kurasu.schedule.photo.attached? %>
  </div>
  <div class="container">
    <%= link_to 'Update Schedule', edit_schedule_path(@kurasu.schedule) , class: "btn btn-primary mt-3" %>
  </div>
  <% else %>
    <%= link_to 'New Schedule', new_kurasu_schedule_path(@kurasu) , class: "btn btn-primary mb-3" %>
  <% end %>
</div>
